doctype 5
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title IO
    block styles
      link(href="css/style.css", rel="stylesheet")
      link(href="bootstrap/docs/assets/css/bootstrap.css", rel="stylesheet")
      link(href="bootstrap/docs/assets/css/bootstrap-responsive.css", rel="stylesheet")

    body
      .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
          .container
            a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.brand(href='/') IO
            .nav-collapse.collapse
              ul.nav
                form.navbar-form.form-search
                  .input-append
                    input.search-query.span4(type='text', placeholder='Search', data-provide="typeahead")
                    button.btn.btn-danger(type='submit')
                      i.icon-white.icon-search
              ul.nav
                div
                  a.btn.btn-primary(id="videoUpload", name="videoUpload", href="/upload")
                    i.icon-white.icon-upload
                    |  Upload
              ul.nav
                div
                  a.btn.btn-primary.dropdown-toggle(data-toggle='dropdown')
                    i.icon-white.icon-user
                    |  Sign In &#32;
                    strong.caret
                  ul.dropdown-menu
                    li
                      form(action='/login', method='post', style='height: 140px;')
                        .dropdown-menu-group
                          input#user_login(type='text', placeholder='E-mail or Username', name='user[username]')
                          input#user_pass(type='password', placeholder='Password', name='user[password]')
                          label.checkbox
                            input(type='checkbox', value='true', name='user[remember_me]')
                            | Remember me
                          .divider
                        input.btn.btn-primary(type='submit', style='margin: 5px 0px 5px 85px') Sign In

      block content
      hr
      footer
        .container
          p.
            &copy; IO 2012

    block scripts
      script(src="js/jquery.min.js")
      script(src='bootstrap/js/bootstrap-dropdown.js')
      script
        $(function(){
          $('.dropdown-menu form').on('click', function (e) {
            e.stopPropagation();
          });
        });
